<%= render 'shared/page_title', title: "CHEFS" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "RECIPES", recipes_path %>
  </li>
  <li class="active">
    <%= link_to "CHEFS", chefs_path %>
  </li>
</ul>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center chef-info">
      <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
      <p>
        <h4>
          Chef: <b><%= chef.chefname %></b>
        </h4>
        <hr />
      </p>
    </div>
  </div>
<% end %>
