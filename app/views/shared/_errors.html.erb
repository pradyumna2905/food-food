<% if obj.errors.any? %>
  <div class="row error-display-section">
    <div class="alert alert-danger">
      <h4>Hey, looks like something is missing: </h4>
      <ul>
        <% obj.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
