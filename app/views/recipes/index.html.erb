<%= render 'shared/page_title', title: "Recipes" %>
<%= link_to "New Recipe", new_recipe_path, class: "btn btn-lg border-blue-join new-recipe" %>
<hr />
<div class="container custom-container">
<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for recipe.chef, size: 100 %>
        <h5>Chef: <%= recipe.chef.chefname %></h5>
      </section>
    </div>

    <div class="col-lg-6 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>
      <p><span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %> ago</small></span></p>
    </div>

    <div class="col-md-4">
      <%= image_tag(recipe.picture.url, size: "250x150", class: "recipe-image") if recipe.picture?  %>
    </div>
  </div>
  <hr />

<% end %>
</div>
