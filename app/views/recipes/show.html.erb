<%= render 'shared/page_title', title: @recipe.name %>

<div class="row">
  <div class="col-md-4 pull-right center">
    <%= link_to gravatar_for(@recipe.chef, size: 200), chef_path(@recipe.chef) %>

    <p>
      <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
    </p>

  </div>

  <div class="col-md-6 description-container">
    <h3> <%= @recipe.summary %> </h3>
    <div class="show-recipe">
      <%= image_tag(@recipe.picture.url, class: "recipe-image") if @recipe.picture? %>
    </div>
    <div class="well">
      <p>
        <strong>Steps: <strong>
      </p>
      <%= simple_format(@recipe.description) %>
      <div class="pull-right">
        <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-up"></i>&nbsp <%= @recipe.upvote_total %>
        <% end %>&nbsp&nbsp&nbsp&nbsp
        <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-down"></i> &nbsp <%= @recipe.downvote_total %>
        <% end %>

      </div>
    </div>
  </div>
</div>

<h5> <%= link_to "Return to Recipes Listings", recipes_path, class: "btn btn-small border-blue-join" %>
  <% if logged_in and @recipe.chef == current_user %>
    <%= link_to "Edit Recipe", edit_recipe_path, class: "btn btn-small border-blue-join" %></h5>
  <% end %>
