<%= render 'shared/page_title', title: @recipe.name %>

<div class="row">
  <div class="col-md-4 pull-right center">
    <%= gravatar_for @recipe.chef, size: 200 %>

    <p>
      <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
    </p>

  </div>

  <div class="col-md-6 description-container">
    <h3> <%= @recipe.summary %> </h3>
    <div class="well">
      <p>
        <strong>Steps: <strong>
      </p>
      <%= simple_format(@recipe.description) %>
    </div>
  </div>
</div>

<h5> <%= link_to "Return to Recipes Listings", recipes_path, class: "btn btn-small border-blue-join" %>
<%= link_to "Edit Recipe", edit_recipe_path, class: "btn btn-small border-blue-join" %></h5>
